  clear: both;
  padding: 7px 40px;
  background: rgba(66, 109, 140, 0.7);
  border-radius: 0 0 25px 25px;
  width: 100%;
}

#jw_<%= @gist.id %> .jw_footer a {
  color: white;
  font-family: sans-serif;
  text-decoration: none;

}

#jw_<%= @gist.id %> .jw_footer .jw_pull_left .jw_gravatar{
  border-radius:50%;
}

#jw_<%= @gist.id %> .jw_footer .jw_pull_right {
  float: right;
}

#jw_<%= @gist.id %> .jw_footer .jw_pull_left {
  float: left;
