.pull-left {float: left;}
.pull-right {float: right;}
.gist {
  font-family: 'helvetica', sans-serif;
  position: relative;
  overflow-x: hidden;
  background: #232323;
  border-radius: 2px;
  margin: 10px 0px;
}
.gist .gist-body {overflow-x: scroll;overflow-y:hidden;position: relative;z-index: 1;}
.gist .gist-canvas {position: absolute;left: 40px;top: 10px;z-index: -1;}
.gist .gist-footer {
  background-color: #2ecc71;
  padding: 10px;
  letter-spacing: 0px;
  word-spacing: -2px;
}
.gist .gist-footer a {
  color: #fff;
  text-decoration: none;
  font-size: 14px;
  vertical-align: middle;
  display: inline-block;
}
.gist .gist-footer a.hosted {padding: 3px 10px;}
.gist .gist-footer a.hosted .fa-heart {color: #c0392b;}
.gist .gist-footer .meta a {vertical-align:bottom;}
.gist .gist-footer .meta a img {
  margin-left: 3px;
  margin-right: 10px;
  border-radius: 50px;
}
.gist .gist-footer .meta .gist-title {
  padding: 3px 0px;
  display: inline-block;
}
pre {
  display: block;
  padding: 9.5px;
  margin: 0 0 15px 0;
  font-size: 12px;
  line-height: 1.4;
  word-break: break-all;
  word-wrap: break-word;
  font-family: monospace;
  color: #fff;

.clearf:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
}
 
.clearf {
    display: inline-block;
}

