/* CodeRay syntax highlighting */
.CodeRay {margin: 0px;padding: 0px;}
.CodeRay pre {background: transparent;border: none;}
.CodeRay .code {padding-left: 5px;}
.CodeRay .line-numbers {margin: 0px 0px -2px -2px;display: inline-table;}
.CodeRay .line-numbers pre {
  padding: 8px 12px;
  border-right: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 0px;
  text-align: center;
}
.CodeRay .line-numbers pre a {text-decoration: none;color: #fff;}

/* JustWatch default theme */
.gist-default {background-color: #F5F5F5;border: none !important;overflow-y: hidden;}
.gist-default pre {color: #333;padding: 8px;}
.gist-default .line-numbers {background-color: #EBEBEB;margin: -2px 0px -2px -2px;display: inline-table;}
.gist-default .line-numbers pre a {color: #888888;}
.gist-default .gist-footer {background-color: #7694AA;position: relative;z-index: 2;}


/* CodeRay syntax highlighting predefined */
.CodeRay .symbol { color: #a385fc; }
.CodeRay .color { color: #a385fc; }
.CodeRay .class { color: #a7e040; }
.CodeRay .key { color: #6bd9ed; }
.CodeRay .value { color: #6bd9ed;}
.CodeRay .inline-delimiter { color: #f62d73; }
.CodeRay .type { color: #F62D73;}
.CodeRay .float { color: #a385fc; }
.CodeRay .string { color: #e5da7a; }
.CodeRay .comment { color: #75715f; }
.CodeRay .keyword { color: #f62d73; }
.CodeRay .entity { color: #f62d73; }
.CodeRay .predefined-constant { color: #a7e040; }
.CodeRay .function { color: #a7e040; }
.CodeRay .constant { color: #6bd9ed;}
.CodeRay .regexp .inline-delimiter { color: #e5da7a; }
.CodeRay .regexp .char { color: #a385fc; }
.CodeRay .regexp .delimiter { color: #e5da7a; }
.CodeRay .regexp .content { color: #e5da7a; }
.CodeRay .regexp .inline { color: #e5da7a; }
.CodeRay .regexp .inline .delimiter { color: #e5da7a; }
.CodeRay .regexp .inline .constant { color: #6bd9ed; }
.CodeRay .regexp .modifier { color: #e5da7a; }

#jw_<%= @gist.id %> .jw_content {
  white-space: pre;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
  font-size: 11px;
  width: 200px;
}

#jw_<%= @gist.id %> .jw_image {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}

