.clearf:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
}
 
.clearf {
    display: inline-block;
}

#jw_<%= @gist.id %> {
  margin: 1%;
  font: 100%;
  max-width: 500px;
  position: relative;

}

#jw_<%= @gist.id %> .jw_container{
  overflow-y: hidden;
  position: relative;
  float: left;
  width: 88%;
  border: 1px #ccc solid;
  border-bottom: none;
  border-left: none;
  background-color: white;
  /*padding-bottom: 32px;*/
}


#jw_<%= @gist.id %> .jw_line_numbers{
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
  font-size: 11px;
  float: left;
  width: 43px;
  border-right: 2px #999 solid;
  text-align: right;
  background-color: #eee;
  color: rgba(237, 240, 242, 0.7);
  line-height: 1.4em;
  width: 10%;
}

#jw_<%= @gist.id %> .jw_line_numbers .jw_number {
  display: block;
  padding: 0 10px;
  /*width: 100%;*/
}

#jw_<%= @gist.id %> .jw_line_numbers .jw_number:first-child {
  padding: 2.2px 10px 0;
  
}

#jw_<%= @gist.id %> .jw_line_numbers .jw_number:last-child {
  padding: 0 10px 2.2px;
}

#jw_<%= @gist.id %> .jw_line_numbers .jw_number:nth-child(2n) {
  background: rgba(158, 167, 173, 0.6);
}
#jw_<%= @gist.id %> .jw_line_numbers .jw_number:nth-child(2n+1) {
  background: rgba(105, 118, 128, 1);
}

#jw_<%= @gist.id %> .jw_content {
  white-space: pre;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
  font-size: 11px;
  width: 200px;
}

#jw_<%= @gist.id %> .jw_image {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}

#jw_<%= @gist.id %> .jw_footer{
  clear: both;
  padding: 7px 40px;
  background: rgba(66, 109, 140, 0.7);
  border-radius: 0 0 25px 25px;
  width: 100%;
}

#jw_<%= @gist.id %> .jw_footer a {
  color: white;
  font-family: sans-serif;
  text-decoration: none;

}

#jw_<%= @gist.id %> .jw_footer .jw_pull_left .jw_gravatar{
  border-radius:50%;
}

#jw_<%= @gist.id %> .jw_footer .jw_pull_right {
  float: right;
}

#jw_<%= @gist.id %> .jw_footer .jw_pull_left {
  float: left;
}
